@model SignInViewModel
           
@{
    ViewBag.Title = "Sign In";
}

<h2>Sign In</h2>

<p>
    Please enter your user name and password. @Html.ActionLink("Sign Up", "New", "Users") if you don't have an account.
</p>

@Html.ValidationSummary(true, "Sign in was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginRouteForm("CreateSession")) {
    <div>
        <fieldset>
            <legend>Sign In Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Sign In" />
            </p>
        </fieldset>
    </div>
}


